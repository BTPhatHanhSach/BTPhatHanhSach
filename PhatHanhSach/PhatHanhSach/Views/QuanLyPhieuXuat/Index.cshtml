@using PhatHanhSach.Models
@model IEnumerable<PHIEUXUAT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
                      <h3>Quản Lý Phiếu Xuất </h3>
@Html.ActionLink("Thêm Phiếu Xuất", "XuatSach", "QuanLyPhieuXuat")
<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>Mã Đại Lý</th>
                <th>Tên Đại Lý</th>
                <th>Ngày Xuất</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (PHIEUXUAT s in Model)
            {
                <tr>
                    <td>@s.MaDL</td>
                    <td>@s.DAILY.Ten</td>
                    <td>@s.NgayXuat.Value.ToString("dd/MM/yyyy")</td>
                    <td>@s.TongTien.Value.ToString("#,##") VNĐ</td>
                    @if (s.TrangThai == false)
                    {
                        <td>Chưa thanh toán</td>
                    }
                    else
                    {
                        <td>Đã thanh toán</td>
                    }
                    <td>@Html.ActionLink("Xem Chi Tiết", "XemChiTiet", new { @MaPX = s.MaPX })</td>
                    <td>@Html.ActionLink("Cập Nhật Trạng Thái", "CapNhatTrangThai", new { @MaPX = s.MaPX })</td>
                </tr>
            }
        </table>
        </div>
    </div>

    <style>
        table {
            margin-bottom 500px;
            font-size: 20px;
        }

            table img {
                display: block;
                margin-left: auto;
                margin-right: auto;
                width: 130px;
                height: 200px;
            }

            table th {
                text-align: center;
            }
    </style>

